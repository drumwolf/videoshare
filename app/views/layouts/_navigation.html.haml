.navbar.navbar-inverse
  %nav.navbar-inner
    .container
      = link_to "Videoshare", root_path, :class => 'brand'
      %button.navbar-toggle
        %span.sr-only toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %nav.collapse.navbar-collapse{:role => 'navigation'}
        %ul.nav.navbar-right
          - if user_signed_in?
            %li
              = link_to current_user.name, '#', { class: 'dropdown-trigger' }
              %ul.usermenu
                %li
                  = link_to 'Videos', videos_path#, :method=>'index'
                %li
                  = link_to 'Logout', destroy_user_session_path, :method=>'delete'
                %li
                  = link_to 'Edit account', edit_user_registration_path
                - if current_user.has_role? :admin
                  %li
                    = link_to 'Admin', users_path
          - else
            %li
              -# = link_to 'Login', new_user_session_path, { class: 'username' }
              = link_to 'Login', users_path #{ class: 'dropdown-trigger' }
              %ul.usermenu

              %li

                = link_to 'Sign up', new_user_registration_path, class:'modal_link'
